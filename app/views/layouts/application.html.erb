<!DOCTYPE html>
<html>
<head>
  <title>Telesocia</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="container">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
	<a class="navbar-brand" href="#">Telesocia</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	<ul class="nav navbar-nav">
	  <li class="active"><%= link_to "Home", root_path -%></li>
	  <% if user_signed_in? -%>
	  <li><%= link_to "Show Telesocis", telesocis_path %></li>
	  <li><%= link_to "Add Telesoci", new_telesoci_path %></li>
	  <li><%= link_to "Account Settings", edit_user_registration_path %></li>
	  <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
	  <% else %>
	  <li><%= link_to "Register", new_user_registration_path %></li>
	  <li><%= link_to "Log In", new_user_session_path, method: :get %></li>
	  <% end -%>
	</ul>
      </div>
    </div>
  </nav>
  
  <% if notice.present? -%>
  <aside class="alert alert-info"><%= notice %></aside>
  <% end %>
  
  <% if alert.present? -%>
  <aside class="alert alert-danger"><%= alert %></aside>
  <% end %>

  <%= yield %>

</body>
</html>
